# Docker registry to fetch images from
DOCKER_REGISTRY=releases-docker.jfrog.io

# Version of artifactory to install
ARTIFACTORY_VERSION={{ artifactory_version }}

# The installation directory for Artifactory
ROOT_DATA_DIR={{ data_dir }}

# Router external port mapping
JF_ROUTER_ENTRYPOINTS_EXTERNALPORT={{ external_port }}

# JVM memory configuration
# Adjust based on available system memory
JF_SHARED_JAVAARGS=-Xms512m -Xmx2g -XX:+UseG1GC

{% if use_postgres %}
# PostgreSQL configuration
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_DB={{ postgres_db }}

# PostgreSQL tuning parameters for better performance with Artifactory
POSTGRES_MAX_CONNECTIONS=300
{% endif %}

# Nginx log rotation configuration
NGINX_LOG_ROTATE_COUNT=10
NGINX_LOG_ROTATE_SIZE=10m

# Security settings
JF_SHARED_SECURITY_JOINKEY={{ joinkey }}
